                    img.development__img(src="../assets/imgs/standarts.jpg")
            .line
            .projects 
                .projects__inner
                    mixin project()                  
                        .project
                            .project__img-wrap 
                                img.project__img(src="../assets/imgs/web-programming.svg")
                                .project__count 125
                            p.project__text Our projects
                    +project()
                    +project()
                    +project()
                    +project()
                    +project()
                                       
    .works
        .works__background
            .container 
                .works__top
