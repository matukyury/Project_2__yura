extends layout/layout

block vars
    - var pageTitle = 'Главная страница'
    - var pageBodyClass = 'homepage'
    - var pageHeaderClass = ''

block content
    section.header
        .container
            .hedaer__top 
                nav.nav
                    ul.nav__list
                        li.nav__item
